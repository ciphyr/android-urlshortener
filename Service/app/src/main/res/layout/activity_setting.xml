<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting"
    android:padding="10dp">



    <TextView
        android:id="@+id/settingsTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Automation Settings"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/firstSettingTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingsTxt"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_marginRight="70dp"
        android:text="Prompt to shorten when a URL is copied."
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />

    <Switch
        android:id="@+id/notification"
        android:layout_width="59dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/settingsTxt"
        android:layout_height="52dp"
        tools:ignore="MissingConstraints"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstSettingTxt"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_marginRight="50dp"
        android:text="Automatically shorten URLs when copied."
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />

    <Switch
        android:id="@+id/foregroundService"
        android:layout_width="59dp"
        android:layout_height="52dp"
        tools:ignore="MissingConstraints"
        android:layout_alignParentRight="true"
        android:layout_below="@id/firstSettingTxt"/>

</RelativeLayout>